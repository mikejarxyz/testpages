<!DOCTYPE html>
<html>
<head>
    <title>Pot Size Display</title>
</head>
<body>
    <h1>Pot Size:</h1>
    <p id="potSizeText">Loading...</p>

    <script>
        // Function to fetch the raffle.potSize.formatted and update the text
        function fetchAndDisplayPotSize() {
            fetch("https://raffle.link/canadinnsfoundation/raffle/current/pot.json")
                .then(response => response.json())
                .then(data => {
                    const potSizeFormatted = data.raffle.potSize.formatted;
                    // Update the text in the HTML element
                    document.getElementById("potSizeText").textContent = "Pot Size: " + potSizeFormatted;
                })
                .catch(error => {
                    console.error("Error fetching JSON data:", error);
                    document.getElementById("potSizeText").textContent = "Error fetching data.";
                });
        }

        // Call the function when the page loads
        fetchAndDisplayPotSize();

        // Periodically update the pot size (every 5 seconds in this example)
        setInterval(fetchAndDisplayPotSize, 5000);
    </script>
</body>
</html>
